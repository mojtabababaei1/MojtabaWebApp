@model List<CodeYad_Blog.CoreLayer.DTOs.Kalas.KalaDto>
@{
    var counter = 1;
}
<section class="content">
    <div class="box box-primary ">
        <div class="box-body p-0">
            <table class="table table-bordered table-hover">
                <thead>
                    <tr>
                        <th>#</th>
                        <th>عنوان</th>
                        <th>زیرگروه</th>
                        <th>عملیات</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@counter</td>
                            <td>@item.Subject</td>
                              <td>@item.Name</td>
                      <td>@item.Message</td>
                        <td>@item.PhoneNumber</td>
                      
                        </tr>

                        counter += 1;
                    }
                </tbody>
            </table>
        </div>
    </div>
</section>