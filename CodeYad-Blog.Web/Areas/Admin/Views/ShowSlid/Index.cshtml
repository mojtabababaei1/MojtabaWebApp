@model List<CodeYad_Blog.CoreLayer.DTOs.ShowSlids.ShowSlidDto>
@using CodeYad_Blog.CoreLayer.Utilities;
<section class="content">
    <a class="btn btn-success" style="margin-bottom: 5px" asp-area="Admin" asp-controller="ShowSlid" asp-action="Create">افزودن مقاله</a>
    <div class="box box-primary ">
        <div class="box-body p-0">
            <table class="table table-bordered table-hover">
                <thead>
                    <tr>
                        <th>عکس</th>
                        <th>عنوان</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                <img style="max-width: 150px" src="@Directories.GetPostImage(item.ImageName)" />
                               
                            </td>
                            <td>@item.Title</td>

                            <form asp-area="Admin" asp-controller="ShowSlid" asp-action="Delete" asp-route-id="@item.Id" method="post">

                            <td>
                                <a asp-area="admin" asp-controller="ShowSlid" asp-action="Edit" asp-route-id="@item.Id" class="btn btn-info btn-sm">ویرایش</a>
                            </td>
                            <td>
                                <button class="btn btn-info btn-sm" type="submit">حذف</button>
                            </td>
                            </form>
                        </tr>


                    }

                </tbody>
            </table>
        </div>

    </div>
</section>